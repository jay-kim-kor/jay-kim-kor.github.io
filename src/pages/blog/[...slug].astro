---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await render(post);

// 읽기 시간 추정
const readTime = Math.max(1, Math.ceil((post.body?.trim().split(/\s+/).length ?? 0) / 200));

// 이전/다음 포스트
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
const currentIdx = allPosts.findIndex((p) => p.id === post.id);
const prevPost = currentIdx < allPosts.length - 1 ? allPosts[currentIdx + 1] : null;
const nextPost = currentIdx > 0 ? allPosts[currentIdx - 1] : null;
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="max-w-3xl mx-auto">
    <header class="mb-8">
      <div class="flex flex-wrap gap-2 mb-4">
        {post.data.tags.map((tag: string) => (
          <a
            href={`/career-hub/blog/tag/${tag}/`}
            class="badge hover:bg-primary-500/20 transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-surface-900 dark:text-white mb-4">
        {post.data.title}
      </h1>
      <div class="flex items-center gap-4 text-sm text-surface-500 dark:text-surface-400">
        <time datetime={post.data.publishDate.toISOString()} class="font-mono">
          {post.data.publishDate.toLocaleDateString('ko-KR')}
        </time>
        <span>·</span>
        <span>{readTime} min read</span>
      </div>
    </header>

    <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:scroll-mt-20 prose-a:text-primary-500 prose-code:text-primary-400 prose-pre:bg-surface-900 prose-pre:border prose-pre:border-surface-800">
      <Content />
    </div>

    {/* Post Navigation */}
    <nav class="mt-12 pt-8 border-t border-surface-200 dark:border-surface-800">
      <div class="flex flex-col sm:flex-row justify-between gap-4">
        {prevPost ? (
          <a
            href={`/career-hub/blog/${prevPost.id}/`}
            class="group flex-1"
          >
            <span class="text-xs text-surface-500 dark:text-surface-400 mb-1 block">이전 글</span>
            <span class="text-surface-700 dark:text-surface-300 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
              &larr; {prevPost.data.title}
            </span>
          </a>
        ) : <div class="flex-1" />}
        {nextPost ? (
          <a
            href={`/career-hub/blog/${nextPost.id}/`}
            class="group flex-1 text-right"
          >
            <span class="text-xs text-surface-500 dark:text-surface-400 mb-1 block">다음 글</span>
            <span class="text-surface-700 dark:text-surface-300 group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors">
              {nextPost.data.title} &rarr;
            </span>
          </a>
        ) : <div class="flex-1" />}
      </div>
      <div class="mt-6 text-center">
        <a
          href="/career-hub/blog/"
          class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-300 transition-colors text-sm"
        >
          &larr; 블로그 목록으로
        </a>
      </div>
    </nav>
  </article>
</BaseLayout>
