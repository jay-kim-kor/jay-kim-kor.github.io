---
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
const base = '/career-hub';

const navItems = [
  { label: 'About', href: `${base}/` },
  { label: 'Experience', href: `${base}/experience/` },
  { label: 'Projects', href: `${base}/projects/` },
  { label: 'Skills', href: `${base}/skills/` },
  { label: 'Blog', href: `${base}/blog/` },
  { label: 'Certifications', href: `${base}/certifications/` },
];

function isActive(href: string): boolean {
  if (href === `${base}/`) return currentPath === href;
  return currentPath.startsWith(href);
}
---

<header
  class="sticky top-0 z-50 w-full border-b border-surface-200 dark:border-surface-800 bg-white/80 dark:bg-surface-950/80 backdrop-blur-md"
>
  <nav class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo / Name -->
      <a
        href={`${base}/`}
        class="text-lg font-bold text-surface-900 dark:text-white hover:text-primary-500 dark:hover:text-primary-400 transition-colors"
      >
        Career Hub
      </a>

      <!-- Desktop nav -->
      <div class="hidden md:flex items-center gap-6">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={['nav-link', { active: isActive(item.href) }]}
            >
              {item.label}
            </a>
          ))
        }
        <ThemeToggle />
      </div>

      <!-- Mobile hamburger -->
      <div class="flex items-center gap-2 md:hidden">
        <ThemeToggle />
        <button
          id="mobile-menu-btn"
          type="button"
          aria-label="메뉴 열기"
          class="p-2 rounded-lg text-surface-500 hover:text-primary-500 dark:text-surface-400 dark:hover:text-primary-400 transition-colors"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2 pt-2 border-t border-surface-200 dark:border-surface-800">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                'nav-link block py-2 px-3 rounded-lg hover:bg-surface-100 dark:hover:bg-surface-900',
                { active: isActive(item.href) },
              ]}
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
